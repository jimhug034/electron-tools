{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "target": "es2017",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false

}
